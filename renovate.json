{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "type: dependencies"
  ],
  "dependencyDashboard": true,
  "baseBranchPatterns": [
    "main",
    "/^release\\/.*/"
  ],
  "separateMultipleMajor": true,
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 10pm every weekday",
    "every weekend",
    "before 5am every weekday"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "devDependencies",
      "automerge": true
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "dependencies",
      "automerge": false
    }
  ]
}
